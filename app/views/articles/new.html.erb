<div class="form-actions">
        <%= simple_form_for(@article) do |f| %>
            <%= f.error_notification %>
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">New Article</h3>
            </div>
            <form role="form">
              <div class="box-body">
                <div class="form-group">
                    <%= f.input :title, :placeholder => "Enter title" %>
                </div>
                <div class="form-group">
                    <%= f.input :body, :as => :ckeditor, input_html: {:ckeditor => {:toolbar => 'FULL', :width => '100%' }} %>
                </div>
              </div>

              <div class="box-footer">
                  <div class="form-actions">
                    <%= f.button :submit, :class => "btn btn-primary fsSubmitButton" %>
                  </div>
              </div>
            </form>
          </div>
           <%= link_to articles_path do %>
                <button type="button" class="btn btn-default btn-sm">Back</button>
            <% end %>
          <% end %>
</div>
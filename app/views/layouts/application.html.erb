<!DOCTYPE html>
<html>
<head>
  <title>CollegeBlend</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!-- Latest compiled and minified CSS -->
   <%= stylesheet_link_tag '/bootstrap/css/bootstrap.min.css' %> 
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
  <!-- Ionicons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
  <!-- Theme style -->
  <%= stylesheet_link_tag '/dist/css/AdminLTE.min.css' %> 
  <%= stylesheet_link_tag '/dist/css/skins/skin-blue.min.css' %> 
</head>
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a ><%= link_to 'CollegeBlend', page_path('home'), :class => "navbar-brand" %></a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'Home', page_path('home') %></li>
        <li><%= link_to 'User Index', users_path %></li>
        <% if user_signed_in? %>
        <li><%= link_to 'Profile', current_user %></li>
        <li><%= link_to 'Log Out', destroy_user_session_path, :method => 'delete', :class => "btn" %></li>
        <% else %>
        <li><%= link_to 'Sign Up', new_user_registration_path, :class => "btn" %></li>
        <li><%= link_to 'Log In', new_user_session_path, :class => "btn" %></li>
        <% end %>
        
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>    


<body>
  <div class="container">
    <body align="center">
        <div class="btn btn-success">
            <%= link_to 'Sign Up', new_user_registration_path, :class => "btn" %>
        </div>

        <% if user_signed_in? %>
            <div class="btn btn-danger">
                <%= link_to 'Log Out', destroy_user_session_path, :method => 'delete', :class => "btn" %>
            </div>
        <% else %>
            <div class="btn btn-info">
                <%= link_to 'Log In', new_user_session_path, :class => "btn" %>
            </div>
        <% end %>
    </body>
</div>
   <br>
  <div class = "container">
    <% flash.each do |message_type, message| %>
      <div id = "flash" class="flash-<%= message_type %>"><%= message %></div>
    <% end %>

<%= yield %>

<!-- REQUIRED JS SCRIPTS -->

<!-- jQuery 2.2.3 -->
<%= javascript_include_tag '/plugins/jQuery/jquery-2.2.3.min.js' %>
<!-- Bootstrap 3.3.6 -->
<%= javascript_include_tag '/bootstrap/js/bootstrap.min.js' %>
<!-- AdminLTE App -->
<%= javascript_include_tag '/dist/js/app.min.js' %>

</body>
</html>



